{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": {
      "bitcorn/tests/*": [
        "tests/*"
      ],
      "bitcorn/*": [
        "app/*",
        "lib/downloads/app/*",
        "lib/tutorials/app/*"
      ],
      "downloads": [
        "lib/downloads/addon"
      ],
      "downloads/*": [
        "lib/downloads/addon/*"
      ],
      "downloads/test-support": [
        "lib/downloads/addon-test-support"
      ],
      "downloads/test-support/*": [
        "lib/downloads/addon-test-support/*"
      ],
      "tutorials": [
        "lib/tutorials/addon"
      ],
      "tutorials/*": [
        "lib/tutorials/addon/*"
      ],
      "tutorials/test-support": [
        "lib/tutorials/addon-test-support"
      ],
      "tutorials/test-support/*": [
        "lib/tutorials/addon-test-support/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*",
    "lib/downloads/**/*",
    "lib/tutorials/**/*"
  ]
}
