<div class="card col-10 col-sm-7 col-md-12 ml-auto mr-auto">
  <div class="row">
    <div class="col-md-4">
      <img class="w-100" alt={{@imageName}} src={{@imagePath}}>
    </div>

    <div class="col-md-8">
      <div class="card-block">
        <h4 class="card-title">{{@title}}</h4>

        <p class="card-text">
          {{html-safe @description}}
        </p>

        {{#link-to @link}}
          <btn class="btn btn-primary">Read More</btn>
        {{/link-to}}
      </div>
    </div>
  </div>
</div>