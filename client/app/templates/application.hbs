<div class="background" id="top">
  {{#bs-navbar as |navbar|}}
    <a href="/" class="navbar-brand"><div class="logo"></div></a>

    {{navbar.toggle}} {{!-- sandwich --}}
    {{#navbar.content}}
      {{#navbar.nav id="headbar" class="ml-auto" as |nav| }}
        {{!-- home --}}
        {{#nav.item class="button"}}{{#nav.link-to "home"}}Home{{/nav.link-to}}{{/nav.item}}

        {{!-- downloads --}}
        {{#bs-dropdown class="dropdown" as |dd|}}
          {{#dd.button class="menu-button"}}Downloads{{/dd.button}}

          {{#dd.menu class="menu" as |menu|}}
            {{#menu.item}}
              {{#menu.link-to "downloads.graphics" class="download-link"}}Graphics{{/menu.link-to}}
            {{/menu.item}}

            {{#menu.item}}
              {{#menu.link-to "downloads.programs" class="download-link"}}Programs{{/menu.link-to}}
            {{/menu.item}}
          {{/dd.menu}}
        {{/bs-dropdown}}

        {{!-- tutorials --}}
        {{#bs-dropdown class="dropdown" as |dd|}}
          {{#dd.button class="menu-button"}}Tutorials{{/dd.button}}
        {{/bs-dropdown}}

        {{!-- about --}}
        {{#bs-dropdown class="dropdown" as |dd|}}
          {{#dd.button class="menu-button"}}About{{/dd.button}}

          {{#dd.menu class="menu" as |menu|}}
            {{#menu.item}}
              {{#menu.link-to "about.authors" class="about-link"}}Authors{{/menu.link-to}}
            {{/menu.item}}

            {{#menu.item}}
              {{#menu.link-to "about.page" class="about-link"}}Page{{/menu.link-to}}
            {{/menu.item}}
          {{/dd.menu}}
        {{/bs-dropdown}}

        {{#nav.item}}<div class="menu-button outsider" onclick={{action "activateSettings"}}><span class="fas fa-cog"></span></div>{{/nav.item}}
      {{/navbar.nav}}
    {{/navbar.content}}
  {{/bs-navbar}}

  {{outlet}}
</div>

<div id="footer">
  <span id="liabilities">
    {{#link-to "contact" class="contact"}}Contact{{/link-to}}
    {{#link-to "imprint" class="imprint"}}Imprint{{/link-to}}
    {{#link-to "privacy" class="privacy"}}Privacy{{/link-to}}
  </span>

  <span id="author">
    Copyright &copy; 2019 Alexander Mattheis
  </span>
</div>


{{#if settingsActive}}
  {{settings-modal deactivateSettings=(action "deactivateSettings")}}
{{/if}}